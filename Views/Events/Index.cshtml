@{
    ViewData["Title"] = "Events";
}

<h2>Events</h2>
<a class="btn btn-primary" asp-action="Create">Add New Event</a>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Date</th>
            <th>Description</th>
            <th>Venue</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var eventItem in Model)
        {
            <tr>
                <td>@eventItem.EventName</td>
                <td>@eventItem.EventDate.ToShortDateString()</td>
                <td>@eventItem.Description</td>
                <td>@eventItem.Venue.VenueName</td>
                <td><img src="@eventItem.ImageURL" alt="Event Image" width="100"></td>
                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@eventItem.EventID">Edit</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@eventItem.EventID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

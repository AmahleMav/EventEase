@model EventEase.Models.Booking

<h2>Create Booking</h2>

<form asp-action="Create">
    <div class="form-group">
        <label>Event</label>
        <select asp-for="EventID" class="form-control" asp-items="@(new SelectList(ViewBag.Events, "EventID", "EventName"))"></select>
        <span asp-validation-for="EventID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Venue</label>
        <select asp-for="VenueID" class="form-control" asp-items="@(new SelectList(ViewBag.Venues, "VenueID", "VenueName"))"></select>
        <span asp-validation-for="VenueID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BookingDate"></label>
        <input asp-for="BookingDate" class="form-control" type="date" />
        <span asp-validation-for="BookingDate" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

